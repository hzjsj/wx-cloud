.UCenter-bg {
  background-image: url(https://7376-svip9-1258873690.tcb.qcloud.la/images/326b9a70-7630-438b-89e4-f38e8cfafa2e.jpeg?sign=6132e1b02e433fcf9c42f1821fe0fce6&t=1581251788);
  background-size: cover;
  height: 550rpx;
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}
.k_avatar{
  width:160rpx;
  height: 160rpx;
  border-radius: 50%;
  overflow: hidden;
}