<scroll-view scroll-y class="scrollPage">
	<view class="UCenter-bg">
		<view class="margin-top-lg">
		</view>
		<open-data class="k_avatar" type="userAvatarUrl"></open-data>
		<view class="text-xl margin-top-sm">
			<open-data type="userNickName"></open-data>
		</view>
		<image src="cloud://svip9.7376-svip9-1258873690/images/wave.gif" mode="scaleToFill" class="gif-wave"></image>
	</view>
	<view class="padding flex text-center text-grey bg-white shadow-warp">
		<view class="flex flex-sub flex-direction solid-right">
			<view class="text-xxl text-orange">{{tasks}}</view>
			<view class="margin-top-sm">
				 日程</view>
		</view>
		<view class="flex flex-sub flex-direction solid-right">
			<view class="text-xxl text-blue">{{task}}</view>
			<view class="margin-top-sm">
				 完成</view>
		</view>
		<view class="flex flex-sub flex-direction">
			<view class="text-xxl text-green">{{diary}}</view>
			<view class="margin-top-sm">
				 日记</view>
		</view>
	</view>
	<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg radius">
		<view class="cu-item arrow">
			<navigator class="content" url="../tasks/tasks" hover-class="none">
				<text class="cuIcon-calendar text-blue"></text>
				<text class="text-grey">日程</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<navigator class="content" url="../diary/diary" hover-class="none">
				<text class="cuIcon-form text-green"></text>
				<text class="text-grey">日记</text>
			</navigator>
		</view>
		<view class="cu-item arrow">
			<view class="content" bindtap="showQrcode">
				<text class="cuIcon-appreciatefill text-red"></text>
				<text class="text-grey">赞赏支持</text>
			</view>
		</view>
		<view class="cu-item arrow">
			<button class="cu-btn content" open-type="contact">
				<text class="cuIcon-servicefill text-cyan"></text>
				<text class="text-grey">联系客服</text>
			</button>
		</view>
		<view class="cu-item arrow">
			<button class="cu-btn content" open-type="feedback">
				<text class="cuIcon-writefill text-grey"></text>
				<text class="text-grey">意见反馈</text>
			</button>
		</view>
				<view class="cu-item arrow">
			<button class="cu-btn content" open-type="share">
				<text class="cuIcon-share text-green"></text>
				<text class="text-grey">分享好友</text>
			</button>
		</view>
	</view>
</scroll-view>